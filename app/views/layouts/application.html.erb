  <%= csrf_meta_tags %>
</head>
<body>
  <%# main page container %>
  <div class="container">
  
    <%# navigation bar %>
    <div class="navbar">
      <div class="navbar-inner">
      <%= link_to 'Âµphisher', home_url, :class => 'brand' %>
      <ul class="nav">
        <%# Home link -- this should definitely be more DRY %>
        <% if current_page?(home_url) -%>
          <li class="active"><%= link_to 'Home', '#' %></li>
        <% else -%>
          <li><%= link_to 'Home', home_url %></li>
        <% end -%>
        
        <%# Unknown subjects link -- this should definitely be more DRY %>
