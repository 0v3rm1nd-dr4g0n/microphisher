<%# unknown subject partial %>
<%= content_tag_for :div, unknown_subject, :class => 'well media' do -%>
  <a class="pull-left" href="#" valign="center">
  	<%= image_tag unknown_subject.profile_image_url, :class => 'media-object' %>
  </a>
  <div class="media-body">
    <h4>
      <%= link_to unknown_subject.name, unknown_subject %>
      <span class="pull-right"><%=h unknown_subject.data_sources.count %>&nbsp;data
      	<%=h 'source'.pluralize(unknown_subject.data_sources.count) %></span>
    </h4>
    <p><%=h unknown_subject.description %></p>
  </div>
<% end -%>
