<%# page title %>
<h3>Home</h3>

<%# page contents %>
<% if logged_in? -%>
  <p>Welcome, <strong><%=h current_user.name %></strong>. You have
  <%= link_to "#{current_user.unknown_subjects.count} unknown subjects",
    unknown_subjects_path %> registered.</p>
<% else -%>
  <p>Please <%= link_to 'login with Twitter', :controller => :oauth,
    :action => :login %></p>
<% end -%>
